<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BAKKA_Editor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BAKKA_Editor.Views.Settings.SettingsView">

    <UserControl.DataContext>
        <vm:AppSettingsViewModel />
    </UserControl.DataContext>


    <StackPanel>
        <TextBlock TextWrapping="Wrap" Text="can we just pretend this looks good and correct for the time being? thanks :)" Margin="0,0,0,8" />

        <TextBlock Text="{DynamicResource L.Settings.LanguageLabel}" />
        <ComboBox SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding SupportedLanguages}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Value}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <CheckBox IsChecked="{Binding ShowBeatVisualSettings}" Content="{DynamicResource L.Settings.CheckBoxes.ShowBeatVisualSettings}" />
		<CheckBox IsChecked="{Binding IsActiveCursorTrackingEnabled}" Content="{DynamicResource L.Settings.CheckBoxes.IsActiveCursorTrackingEnabled}" />
    </StackPanel>
</UserControl>
